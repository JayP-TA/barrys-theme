{{ 'section-scroll-prompt.css' | asset_url | stylesheet_tag }}
 {% for block in section.blocks %}
    {% case block.type %}

      {% when 'scrolltext' %}
        <div class="prompt-text h3 center" {{ block.shopify_attributes }}> 
           {{ block.settings.scrolltext | escape }} 
        </div>

      {% when 'scrollicon' %}
        <a href="#" {{ block.shopify_attributes }}>
          <div id="mouse-scroll">
            <div class="mouse">
              <div class="mouse-in"></div>
            </div>
            <div>
                <span class="down-arrow-1"></span>
                <span class="down-arrow-2"></span>
                <span class="down-arrow-3"></span>
              </div>
          </div>
          </a></div>

    {% endcase %}
  {% endfor %}


{% schema %}
{
  "name": "Scroll down prompt",
  "max_blocks": 2,
  "blocks": [
    {
      "type": "scrolltext",
      "name": "Scroll Down Text",
      "settings": [
        {
          "type": "text",
          "id": "scrolltext",
          "label": "Prompt Text",
          "default": "Discover more"
          
        }
      ]
    },
    {
      "type": "scrollicon",
      "name": "Scroll Down Icon"
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "scrolltext"
      },
      {
        "type": "scrollicon"
      }
    ]
  }
}
{% endschema %}
